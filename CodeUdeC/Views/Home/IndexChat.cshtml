@using Microsoft.AspNetCore.Identity
@using CodeUdeC.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<div class="container">
    <h1>Foro de Discusion</h1>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-4">
            <input id="userInput" type="hidden" value="@UserManager.GetUserName(User)">
    </div>
    <div class="row">
        <div class="col-2">Mensaje</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" class="btn btn-success" id="sendButton" value="Enviar Mensaje" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>

<script src="~/js/chat.js"></script>