@{
    ViewBag.Title = "Subir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Identity
@using CodeUdeC.Areas.Identity.Data
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<div class="row">
    <div class="col-sm-12">

        <div class="panel panel-primary" style="margin-top:50px">
            <div class="panel-heading">
                <h4>Cargar Archivo</h4>
            </div>
            <div class="panel-body">


                <form action="@Url.Action("SubirArchivo","Proyect")" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Titulo:</label>
                        <input class="form-control" name="Titulo" type="text" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Descripcion:</label>
                        <textarea class="form-control" name="Descripcion" rows="2" cols="50" autocomplete="off"></textarea>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label>Archivo:</label>
                        <input name="Archivo" type="file" />
                    </div>
                    
                    <input type="hidden" name="User" value="@UserManager.GetUserName(User)">
                    <hr />
                    <button class="btn btn-success">Subir Archivo</button>
                    <a class="btn btn-warning" href="@Url.Action("Index","Proyect")">Volver</a>
                </form>
            </div>
        </div>

    </div>
</div>


